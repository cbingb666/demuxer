{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "module": "ESNext",
        "target": "ESNext",
        "noLib": false,
        "lib": [
            // "es5",
            // "es2015",
            // "es2015.promise",
            "DOM",
            "webworker"
        ],
        "noImplicitAny": false,
        "noErrorTruncation": true,
        "allowJs": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "listFiles": false,
        "paths": {},
        "declaration": true,
        "declarationDir": "dist/types"
    },
    "exclude": [
        "**/node_module/**"
    ],
    "include": [
        "./src/**/*"
    ],
    "types": [
        "node"
    ]
}